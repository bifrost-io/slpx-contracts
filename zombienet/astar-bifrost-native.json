{
	"settings": {
		"provider": "native",
		"timeout": 1800
	},
	"relaychain": {
		"chain": "rococo-local",
		"default_command": "polkadot",
		"default_args": ["-lparachain=debug", "--state-pruning=archive", "--no-hardware-benchmarks"],
		"nodes": [
			{
				"name": "alice",
				"validator": true,
				"env": [{ "name": "RUST_LOG", "value": "trace" }],
				"ws_port": "{{RELAY_WS_PORT}}",
				"rpc_port": "{{RELAY_RPC_PORT}}"
			},
			{
				"name": "bob",
				"validator": true,
				"env": [{ "name": "RUST_LOG", "value": "trace" }]
			},
			{
				"name": "charlie",
				"validator": true,
				"env": [{ "name": "RUST_LOG", "value": "trace" }]
			}
		]
	},
	"parachains": [
		{
			"cumulus_based": true,
			"id": 2006,
			"chain": "astar-dev",
			"default_args": [
				"--trie-cache-size=0",
				"--state-pruning=archive",
				"--no-hardware-benchmarks",
				"--unsafe-ws-external",
				"--unsafe-rpc-external",
				"--rpc-cors=all"
			],
			"collators": [
				{
					"command": "astar-collator",
					"name": "alice",
					"ws_port": "{{PARACHAIN_WS_PORT}}",
					"rpc_port": "{{PARACHAIN_RPC_PORT}}"
				}
			]
		},
		{
			"cumulus_based": true,
			"id": 2030,
			"chain": "bifrost-polkadot-local",
			"default_args": [
				"--trie-cache-size=0",
				"--state-pruning=archive",
				"--no-hardware-benchmarks",
				"--unsafe-ws-external",
				"--unsafe-rpc-external",
				"--rpc-cors=all"
			],
			"collators": [
				{
					"command": "bifrost-xcm-action",
					"name": "alice",
					"ws_port": "{{BIFROST_WS_PORT}}",
					"rpc_port": "{{BIFROST_RPC_PORT}}",
					"args": [
						"-lparachain=trace,xcm=trace,cumulus-consensus=trace,cumulus-collator=trace,collator_protocol=trace,collation_generation=trace"
					]
				}
			]
		}
	],
	"hrmp_channels": [
		{
			"sender": 2006,
			"recipient": 2030,
			"max_capacity": 8,
			"max_message_size": 512
		},
		{
			"sender": 2030,
			"recipient": 2006,
			"max_capacity": 8,
			"max_message_size": 512
		}
	]
}
